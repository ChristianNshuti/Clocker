{
  "name": "clock-app",
  "version": "1.0.0",
  "description": "Digital Clock App with Alarm, Timer, Stopwatch",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "package-win": "electron-builder --win"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "electron": "^26.0.0",
    "electron-builder": "^26.0.12",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.christian.clockapp",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "src/audio/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    }
  }
}
